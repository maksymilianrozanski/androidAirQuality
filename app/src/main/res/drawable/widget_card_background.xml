<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="2dp" />

            <solid android:color="#464646" />

        </shape>
    </item>

    <item android:bottom="2dp">
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners android:radius="2dp" />

            <solid android:color="@color/cardDarkBackground" />

            <padding
                android:bottom="4dp"
                android:left="2dp"
                android:right="2dp"
                android:top="4dp" />
        </shape>
    </item>
</layer-list>